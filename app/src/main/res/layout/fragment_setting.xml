<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:layout_marginBottom="45dp"
    tools:context=".fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="@font/afacadflux_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Setting" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FCFAEE"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:textSize="22sp"
                    android:fontFamily="@font/afacadflux_bold"
                    android:textColor="@color/text_color"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacadflux_semibold"
                    android:text="The Universal Yoga Admin App allows studio staff to easily manage and schedule yoga classes. Staff can add, edit, or delete class details, assign teachers, and track class schedules. The app also supports searching for classes and syncing all data to the cloud for seamless access and updates." />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FCFAEE"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sync Data to Internet"
                    android:textSize="22sp"
                    android:fontFamily="@font/afacadflux_bold"
                    android:textColor="@color/text_color"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacadflux_semibold"
                    android:text="Please note that once you delete your account, it cannot be undone. So please reconsider before taking the action of deleting." />

                <Button
                    android:id="@+id/btn_upload_toInternet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload to Internet"
                    android:backgroundTint="@color/button_color"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FCFAEE"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Data"
                    android:textSize="22sp"
                    android:fontFamily="@font/afacadflux_bold"
                    android:textColor="@color/text_color"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacadflux_semibold"
                    android:text="Please note that once you reset your account, it cannot be undone. So please reconsider before taking the action of reseting." />

                <Button
                    android:id="@+id/btn_resetData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:backgroundTint="@color/button_color"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FCFAEE"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:textSize="22sp"
                    android:fontFamily="@font/afacadflux_bold"
                    android:textColor="@color/text_color"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacadflux_semibold"
                    android:text="Please note that once you delete your account, it cannot be undone. So please reconsider before taking the action of deleting." />

                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:backgroundTint="#C7253E"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FCFAEE"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/afacadflux_bold"
                    android:text="Logout"
                    android:textColor="@color/text_color"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/button_color"
                    android:text="Logout"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
